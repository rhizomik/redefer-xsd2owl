<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
    					http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
 <servlet>
  <servlet-name>RenderRDF</servlet-name>
  <servlet-class>net.rhizomik.redefer.rdf2svg.RenderRDF</servlet-class>
  <init-param>
   <param-name>dotPath</param-name>
   <param-value>/usr/bin/dot</param-value>
  </init-param>
  <init-param>
   <param-name>maxlength</param-name>
   <param-value>250000</param-value>
  </init-param>
 </servlet>
 <servlet>
  <servlet-name>RDF2HTMLRDFa</servlet-name>
  <servlet-class>net.rhizomik.redefer.rdf2html.RDF2HTMLServlet</servlet-class>
  <init-param>
   <param-name>xsl</param-name>
   <param-value>xsl/rdf2html.xsl</param-value>
  </init-param>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <servlet-name>RDF2HTML</servlet-name>
  <servlet-class>net.rhizomik.redefer.rdf2html.RDF2HTMLServlet</servlet-class>
  <init-param>
   <param-name>xsl</param-name>
   <param-value>xsl/rdf2html.nordfa.xsl</param-value>
  </init-param>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <servlet-name>RDF2RDFA</servlet-name>
  <servlet-class>net.rhizomik.redefer.rdf2html.RDF2HTMLServlet</servlet-class>
  <init-param>
   <param-name>xsl</param-name>
   <param-value>xsl/rdf2rdfa.xsl</param-value>
  </init-param>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <servlet-name>RDF2Microdata</servlet-name>
  <servlet-class>net.rhizomik.redefer.rdf2html.RDF2HTMLServlet</servlet-class>
  <init-param>
   <param-name>xsl</param-name>
   <param-value>xsl/rdf2microdata.xsl</param-value>
  </init-param>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <servlet-name>IsIsomorphic</servlet-name>
  <servlet-class>net.rhizomik.redefer.util.IsIsomorphicServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <servlet-name>XSD2OWLServlet</servlet-name>
  <servlet-class>net.rhizomik.redefer.xsd2owl.XSD2OWLServlet</servlet-class>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet>
  <servlet-name>XML2RDFServlet</servlet-name>
  <servlet-class>net.rhizomik.redefer.xml2rdf.XML2RDFServlet</servlet-class>
  <init-param>
  	<param-name>config</param-name>
	<param-value>redefercfg.rdf</param-value>
  </init-param>
