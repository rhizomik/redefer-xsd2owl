 </servlet>
 <servlet>
 	<description>
 	</description>
 	<display-name>DDEX2RDFServlet</display-name>
 	<servlet-name>DDEX2RDFServlet</servlet-name>
 	<servlet-class>com.sonydadc.ddex2rdf.DDEX2RDFServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>RenderRDF</servlet-name>
  <url-pattern>/render</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RDF2HTML</servlet-name>
  <url-pattern>/rdf2html</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RDF2HTMLRDFa</servlet-name>
  <url-pattern>/rdf2htmlrdfa</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RDF2RDFA</servlet-name>
  <url-pattern>/rdf2rdfa</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>RDF2Microdata</servlet-name>
  <url-pattern>/rdf2microdata</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>IsIsomorphic</servlet-name>
  <url-pattern>/isomorphic</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>XSD2OWLServlet</servlet-name>
  <url-pattern>/xsd2owl</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
  <servlet-name>XML2RDFServlet</servlet-name>
  <url-pattern>/xml2rdf</url-pattern>
 </servlet-mapping>
 <servlet-mapping>
 	<servlet-name>DDEX2RDFServlet</servlet-name>
 	<url-pattern>/ddex2rdf</url-pattern>
 </servlet-mapping>
 <login-config>
  <auth-method>BASIC</auth-method>
 </login-config>
</web-app>
